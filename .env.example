# Spring Profile (dev | prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/demo
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# GitHub OAuth Configuration
# 1. GitHub 설정 페이지: https://github.com/settings/developers
# 2. "New OAuth App" 클릭
# 3. Application name: demo-api
# 4. Homepage URL: http://localhost:8080
# 5. Authorization callback URL: http://localhost:8080/login/oauth2/code/github
# 6. 생성 후 Client ID와 Client Secret을 아래에 입력
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Cookie Configuration (Optional - defaults shown)
# Development: JWT_COOKIE_DOMAIN=localhost, JWT_COOKIE_SECURE=false
# Production: JWT_COOKIE_DOMAIN=yourdomain.com, JWT_COOKIE_SECURE=true
JWT_COOKIE_MAX_AGE=86400
JWT_COOKIE_DOMAIN=localhost
JWT_COOKIE_SECURE=false

# Sync Token (for API synchronization)
SYNC_TOKEN=your_secure_sync_token_here

# OpenAI Embedding Configuration
OPENAI_API_KEY=
OPENAI_MODEL=text-embedding-ada-002
OPENAI_ENDPOINT=https://api.openai.com/v1/embeddings
